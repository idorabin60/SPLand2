{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run with Valgrind",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/simulation",
            "args": [
                "./config_file.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "valgrind",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}